---
apiVersion: apps.open-cluster-management.io/v1
kind: Subscription
metadata:
  name: acs-install-policies-subscription
  namespace: "{{ app_namespace }}"
  annotations:
    apps.open-cluster-management.io/git-branch: "{{ subscription_branch }}"
    apps.open-cluster-management.io/git-path: acm-policies/install-acs
    apps.open-cluster-management.io/reconcile-option: replace
  labels:
    app: "{{ app_name }}"
spec:
  channel: "{{ app_namespace }}/acs-install-policies-channel"
  placement:
    placementRef:
      kind: PlacementRule
      name: acs-install-policies-placement
---
apiVersion: apps.open-cluster-management.io/v1
kind: PlacementRule
metadata:
  name: acs-install-policies-placement
  namespace: "{{ app_namespace }}"
  labels:
    app: "{{ app_name }}"
spec:
  clusterSelector:
    matchLabels:
      name: local-cluster
